.addDay {
	display: grid;
	grid-template-columns: 1fr;
	grid-template-rows: auto auto 70vh auto;
	justify-items: start;
	grid-gap: 40px;
	
	&__header {
		display: grid;
		grid-template-columns: 1fr auto;
		justify-content: space-between;
		width 100%
	}
	&__btns {
		display: grid;
		grid-gap: 10px;
		grid-auto-flow: column;
	}
}

